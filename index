    <script>
        let calculatedTime = null;
        let alarmHour = 0;
        let alarmMinutes = 0;
        
        function setMinutes(min) {
            document.getElementById('minutes').value = min;
            calculate();
        }
        
        function calculate() {
            const minutes = parseInt(document.getElementById('minutes').value) || 0;
            
            // ç¾åœ¨æ™‚é–“ + å‰©é¤˜æ™‚é–“ + 4åˆ†é˜
            const now = new Date();
            calculatedTime = new Date(now.getTime() + (minutes + 4) * 60 * 1000);
            
            alarmHour = calculatedTime.getHours();
            alarmMinutes = calculatedTime.getMinutes();
            
            const hours = alarmHour.toString().padStart(2, '0');
            const mins = alarmMinutes.toString().padStart(2, '0');
            
            document.getElementById('resultTime').textContent = `${hours}:${mins}`;
            document.getElementById('resultFull').textContent = 
                `${calculatedTime.getMonth() + 1}/${calculatedTime.getDate()} ${hours}:${mins}`;
            
            // è¨­å®š Android Intent URL ä¾†ç›´æ¥é–‹å•Ÿæ™‚é˜ app è¨­å®šé¬§é˜
            // ä½¿ç”¨ Chrome Intent scheme
            const alarmLink = document.getElementById('alarmLink');
            
            // Android intent:// URL æ ¼å¼
            // action: android.intent.action.SET_ALARM
            // extras: hour (i. = integer), minutes, message (S. = string)
            const intentUrl = `intent://#Intent;` +
                `action=android.intent.action.SET_ALARM;` +
                `i.android.intent.extra.alarm.HOUR=${alarmHour};` +
                `i.android.intent.extra.alarm.MINUTES=${alarmMinutes};` +
                `S.android.intent.extra.alarm.MESSAGE=${encodeURIComponent('ğŸ„è˜‘è‡æ™‚é–“')};` +
                `end`;
            
            alarmLink.href = intentUrl;
            
            document.getElementById('result').classList.add('show');
            
            // éœ‡å‹•åé¥‹ï¼ˆå¦‚æœæ”¯æ´ï¼‰
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
        }
        
        function copyTime() {
            if (!calculatedTime) return;
            
            const hours = calculatedTime.getHours().toString().padStart(2, '0');
            const mins = calculatedTime.getMinutes().toString().padStart(2, '0');
            const text = `${hours}:${mins}`;
            
            navigator.clipboard.writeText(text).then(() => {
                showToast('å·²è¤‡è£½æ™‚é–“ï¼');
            });
            
            if (navigator.vibrate) {
                navigator.vibrate(30);
            }
        }
        
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }
        
        // æŒ‰ Enter ä¹Ÿå¯ä»¥è¨ˆç®—
        document.getElementById('minutes').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                calculate();
            }
        });
        
        // é é¢è¼‰å…¥æ™‚è‡ªå‹• focus
        document.getElementById('minutes').focus();
    </script>
